<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsFlow.ForgotPassword.ForgotPasswordPage"
             xmlns:navigation="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
            navigation:NavigationPage.HasNavigationBar="False">

    <ContentPage.BackgroundColor>
        <OnPlatform x:TypeArguments="Color">
            <On Platform="Android" Value="#202020" />
            <On Platform="WinUI" Value="#202020" />
        </OnPlatform>
    </ContentPage.BackgroundColor>
    
    <VerticalStackLayout VerticalOptions="Center">

        
        <VerticalStackLayout.WidthRequest>
            <OnPlatform x:TypeArguments="x:Double">
                <On Platform="WinUI" Value="700"/>
                <On Platform="Android, iOS" Value="-1"/>
            </OnPlatform>
        </VerticalStackLayout.WidthRequest>
        
        
        <VerticalStackLayout.HeightRequest>
            <OnPlatform x:TypeArguments="x:Double">
                <On Platform="WinUI" Value="500"/>
                <On Platform="Android, iOS" Value="-1"/>
            </OnPlatform>
        </VerticalStackLayout.HeightRequest>

        <Frame CornerRadius="20"
Padding="0"
HasShadow="False"
BackgroundColor="{OnPlatform Android='White', iOS='White', WinUI='LightGray'}"
Margin="0,20">
            <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
                <Label Text="Introdu adresa de e-mail asociatÄƒ contului"                    
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#333"/>
                <Entry x:Name="EmailEntry" 
               Placeholder="Email" 
               Keyboard="Email" 
               BackgroundColor="#f0f0f0"
               Margin="0,50"
               HeightRequest="50"
               TextColor="Black"/>

                <Button Text="Trimite codul" 
                Clicked="Button_Clicked"
                BackgroundColor="#007aff"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"
                FontSize="16"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>