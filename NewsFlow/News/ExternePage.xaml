<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsFlow.News.ExternePage"
             x:Name="ExternePageRoot"
             Title=""
Shell.BackgroundColor="LightGray"
             xmlns:local="clr-namespace:NewsFlow.Convertors"
             BackgroundColor="#202020">


    <ContentPage.ToolbarItems>
        <ToolbarItem Text="ðŸ”Š"
                 Order="Primary"
                 Priority="0"
                 Command="{Binding ReadNewsCommand}"
                 CommandParameter="{Binding News}" />
    </ContentPage.ToolbarItems>
    <Shell.TitleView>

        <Label Text="Åžtiri Externe"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               TextColor="#202020"
               FontSize="30"
               FontAttributes="Bold"
               Margin="0,0,25,0"/>
    </Shell.TitleView>
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:SubscribeButtonTextConverterclass x:Key="SubscribeButtonTextConverter"/>
            <local:LikeButtonTextConverter x:Key="LikeButtonTextConverter"/>
            <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <local:AudioColorConverter x:Key="AudioColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header Windows -->
        <Grid ColumnDefinitions="Auto,*,Auto"
          Grid.Row="0"
          Padding="10"
          IsVisible="{OnPlatform WinUI=True, Android=False, iOS=False}"
           >

            <Button Text="ðŸ”„ ReÃ®ncarcÄƒ pagina"
                Clicked="Button_Clicked"
                BackgroundColor="LightGray"
                Grid.Column="0"
                VerticalOptions="Center" 
                 TextColor="Black"   />

            <Label Text="È˜tiri Externe"
               FontSize="40"
               FontAttributes="Bold"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="Center"
               Grid.Row="0"
               Grid.Column="1"
                   TextColor="White"/>

            <Button Text="ðŸ”Š AscultÄƒ È˜tirile"
                Command="{Binding ReadNewsCommand}"
                CommandParameter="{Binding News}"
                BackgroundColor="LightGray"
                TextColor="Black"
                Grid.Column="2"
                VerticalOptions="Center" />
        </Grid>

        <!-- TTS Controls -->
        <StackLayout Orientation="Horizontal"
                     Spacing="10"
                     IsVisible="{Binding IsTtsControlVisible}"
                     Padding="10"
                     HorizontalOptions="Center"
                     VerticalOptions="End"
                     Grid.Row="2"
                     Margin="0,0,0,20">
            <Button Text="â®ï¸ ÃŽnapoi" Command="{Binding PreviousNewsTtsCommand}" BackgroundColor="Gray" TextColor="White" />
            <Button Text="â¹ï¸ Stop" Command="{Binding StopTtsCommand}" BackgroundColor="Red" TextColor="White" />
            <Button Text="â­ï¸ ÃŽnainte" Command="{Binding NextNewsTtsCommand}" BackgroundColor="Gray" TextColor="White" />
        </StackLayout>

        <!-- Android / iOS CollectionView with RefreshView -->
        <RefreshView IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding Path=BindingContext.RefreshCommand, Source={x:Reference ExternePageRoot}}"
                     IsVisible="{OnPlatform WinUI=False, Android=True, iOS=True}"
                     Grid.Row="1">
            <CollectionView ItemsSource="{Binding News}"
                            ItemsUpdatingScrollMode="KeepScrollOffset"
                            RemainingItemsThreshold="5"
                            RemainingItemsThresholdReached="OnCollectionViewRemainingItemsThresholdReached"
                            x:Name="NewsListView_Android">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="{Binding IsHighlighted, Converter={StaticResource AudioColorConverter}}"
                               Margin="0,5"
                               Padding="15"
                               CornerRadius="10"
                               HasShadow="True">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Path=BindingContext.OpenNewsCommand, Source={x:Reference ExternePageRoot}}"
                                                      CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <VerticalStackLayout Spacing="10">
                                <Grid ColumnDefinitions="Auto,Auto,*,Auto" VerticalOptions="Center">
                                    <Button Text="{Binding HasSubscribed, Converter={StaticResource SubscribeButtonTextConverter}}"
                                            Command="{Binding Path=BindingContext.SubscribeCommand, Source={x:Reference ExternePageRoot}}"
                                            CommandParameter="{Binding NewsId}"
                                            BackgroundColor="Transparent"
                                            FontSize="20"
                                            Padding="5"
                                            CornerRadius="8"
                                            VerticalOptions="Center"
                                            WidthRequest="5"
                                            Grid.Column="0" />
                                    <Label Text="{Binding Site}"
                                           FontSize="12"
                                           FontAttributes="Italic"
                                           TextColor="Black"
                                           VerticalOptions="Center"
                                           Grid.Column="1" />
                                    <Label Text="{Binding publishedAt}"
                                           FontSize="12"
                                           FontAttributes="Italic"
                                           TextColor="Black"
                                           VerticalOptions="Center"
                                           HorizontalOptions="End"
                                           Grid.Column="3" />
                                </Grid>

                                <StackLayout Orientation="Horizontal" Spacing="5">
                                    <Label Text="{Binding Title}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           LineBreakMode="WordWrap"
                                           HorizontalOptions="FillAndExpand"
                                           TextColor="Black" />
                                </StackLayout>

                                <Label Text="{Binding Content}" FontSize="14" LineBreakMode="WordWrap" TextColor="#414141" />
                                <Image Source="{Binding ImageUrl}"
                                       HeightRequest="180"
                                       WidthRequest="320"
                                       Aspect="AspectFill"
                                       HorizontalOptions="Center"
                                       IsVisible="{Binding IsImageVisible}" />

                                <StackLayout Orientation="Horizontal" Spacing="120" HorizontalOptions="Center">
                                    <StackLayout Orientation="Horizontal" Spacing="5">
                                        <Label Text="{Binding Likes}" FontSize="20" VerticalOptions="Center" TextColor="Black" />
                                        <Button Text="{Binding HasLiked, Converter={StaticResource LikeButtonTextConverter}}"
                                                Command="{Binding Path=BindingContext.LikeNewsCommand, Source={x:Reference ExternePageRoot}}"
                                                CommandParameter="{Binding NewsId}"
                                                BackgroundColor="Transparent"
                                                WidthRequest="70"
                                                FontSize="32" />
                                    </StackLayout>
                                    <Button Text="Distribuie âž¤"
                                            Command="{Binding Path=BindingContext.ShareNewsCommand, Source={x:Reference ExternePageRoot}}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="Transparent"
                                            TextColor="Black"
                                            FontSize="19" />
                                </StackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.Footer>
                    <StackLayout Padding="10">
                        <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" Color="Blue" />
                        <Label Text="Nu mai existÄƒ È™tiri News de afiÈ™at"
                               IsVisible="{Binding HasMoreItems, Converter={StaticResource InverseBoolConverter}}"
                               HorizontalOptions="Center"
                               Margin="0,10,0,0"
                               TextColor="Gray" />
                    </StackLayout>
                </CollectionView.Footer>
            </CollectionView>
        </RefreshView>

        <!-- Windows CollectionView (fÄƒrÄƒ RefreshView) -->
        <CollectionView ItemsSource="{Binding News}"
                        ItemsUpdatingScrollMode="KeepScrollOffset"
                        RemainingItemsThreshold="5"
                        RemainingItemsThresholdReached="OnCollectionViewRemainingItemsThresholdReached"
                        x:Name="NewsListView_Windows"
                        IsVisible="{OnPlatform WinUI=True, Android=False, iOS=False}"
                        Grid.Row="1">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="{Binding IsHighlighted, Converter={StaticResource AudioColorConverter}}"
                           Margin="0,10"
                           Padding="15"
                           CornerRadius="10"
                           HasShadow="True"
                           WidthRequest="1000">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Path=BindingContext.OpenNewsCommand, Source={x:Reference ExternePageRoot}}"
                                                  CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="10">
                            <Grid ColumnDefinitions="Auto,Auto,*,Auto" VerticalOptions="Center">
                                <Button Text="{Binding HasSubscribed, Converter={StaticResource SubscribeButtonTextConverter}}"
                                        Command="{Binding Path=BindingContext.SubscribeCommand, Source={x:Reference ExternePageRoot}}"
                                        CommandParameter="{Binding NewsId}"
                                        BackgroundColor="Transparent"
                                        FontSize="20"
                                        Padding="5"
                                        CornerRadius="8"
                                        VerticalOptions="Center"
                                        WidthRequest="5"
                                        Grid.Column="0" />
                                <Label Text="{Binding Site}"
                                       FontSize="12"
                                       FontAttributes="Italic"
                                       TextColor="Black"
                                       VerticalOptions="Center"
                                       Grid.Column="1" />
                                <Label Text="{Binding publishedAt}"
                                       FontSize="12"
                                       FontAttributes="Italic"
                                       TextColor="Black"
                                       VerticalOptions="Center"
                                       HorizontalOptions="End"
                                       Grid.Column="3" />
                            </Grid>

                            <StackLayout Orientation="Horizontal" Spacing="5">
                                <Label Text="{Binding Title}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       LineBreakMode="WordWrap"
                                       HorizontalOptions="FillAndExpand"
                                       TextColor="Black" />
                            </StackLayout>

                            <Label Text="{Binding Content}" FontSize="14" LineBreakMode="WordWrap" TextColor="#414141" />
                            <Image Source="{Binding ImageUrl}"
                                   HeightRequest="180"
                                   WidthRequest="320"
                                   Aspect="AspectFill"
                                   HorizontalOptions="Center"
                                   IsVisible="{Binding IsImageVisible}" />

                            <Grid ColumnDefinitions="Auto,* ,Auto" Padding="10">
                                <!-- Likes + buton like -->
                                <StackLayout Orientation="Horizontal" Spacing="5" Grid.Column="0">
                                    <Label Text="{Binding Likes}" FontSize="18" VerticalOptions="Center" TextColor="Black" />
                                    <Button Text="{Binding HasLiked, Converter={StaticResource LikeButtonTextConverter}}"
                                            Command="{Binding Path=BindingContext.LikeNewsCommand, Source={x:Reference ExternePageRoot}}"
                                            CommandParameter="{Binding NewsId}"
                                            BackgroundColor="Transparent"
                                            FontSize="24"
                                            WidthRequest="60" />
                                </StackLayout>

                                <!-- Distribuie -->
                                <Button Text="Distribuie âž¤"
                                        Command="{Binding Path=BindingContext.ShareNewsCommand, Source={x:Reference ExternePageRoot}}" 
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Transparent"
                                        HorizontalOptions="End"
                                        TextColor="Black"
                                        FontSize="24"
                                        Grid.Column="2" />
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.Footer>
                <StackLayout Padding="10">
                    <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" Color="Blue" />
                    <Label Text="Nu mai existÄƒ È™tiri de afiÈ™at"
                           IsVisible="{Binding HasMoreItems, Converter={StaticResource InverseBoolConverter}}"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"
                           TextColor="Gray" />
                </StackLayout>
            </CollectionView.Footer>
        </CollectionView>
    </Grid>
</ContentPage>
