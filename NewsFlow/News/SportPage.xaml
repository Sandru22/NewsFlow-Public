<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsFlow.News.SportPage"
             x:Name="SportPageRoot"
             Title="" 
             NavigationPage.HasNavigationBar="False"
             xmlns:local="clr-namespace:NewsFlow.Models">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:LikeButtonTextConverter x:Key="LikeButtonTextConverter"/>
            <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto">
        <VerticalStackLayout Padding="10" Spacing="10" Grid.Row="0">
            <Label Text="ðŸ“° È˜tiri pentru tine" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Button Text="ðŸ”Š CiteÈ™te È˜tirile News"
            Command="{Binding ReadNewsCommand}"
            CommandParameter="{Binding News}"
            BackgroundColor="DarkBlue"
            TextColor="White" />
            <Button Text="ReÃ®ncarcÄƒ È™tirile"
        Clicked="Button_Clicked"
        BackgroundColor="LightGray"
        IsVisible="{OnPlatform WinUI=True, Android=False, iOS=False}" />
        </VerticalStackLayout>
        <StackLayout Orientation="Horizontal"
             Spacing="10"
             IsVisible="{Binding IsTtsControlVisible}"
             Padding="10"
             HorizontalOptions="Center"
             VerticalOptions="End"
                 Grid.Row="2"
             Margin="0,0,0,20">

            <Button Text="â®ï¸ ÃŽnapoi" Command="{Binding PreviousNewsTtsCommand}" BackgroundColor="Gray" TextColor="White" />
            <Button Text="â¹ï¸ Stop" Command="{Binding StopTtsCommand}" BackgroundColor="Red" TextColor="White" />
            <Button Text="â­ï¸ ÃŽnainte" Command="{Binding NextNewsTtsCommand}" BackgroundColor="Gray" TextColor="White" />
        </StackLayout>


        <!-- âœ… Android / iOS: cu RefreshView -->
        <RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding Path=BindingContext.RefreshCommand, Source={x:Reference SportPageRoot}}"
                 IsVisible="{OnPlatform WinUI=False, Android=True, iOS=True}"
                     Grid.Row="1">
            <CollectionView 
                        ItemsSource="{Binding News}"
                        ItemsUpdatingScrollMode="KeepScrollOffset"
                        RemainingItemsThreshold="5"
                        RemainingItemsThresholdReached="OnCollectionViewRemainingItemsThresholdReached"
                        x:Name="NewsListView_Android">



                <!-- ITEM TEMPLATE È™i FOOTER -->
                <CollectionView.ItemTemplate>
                    <DataTemplate >
                        <Frame BackgroundColor="LightGray" Margin="0,5" Padding="15" CornerRadius="10" HasShadow="True" >
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                     Command="{Binding Path=BindingContext.OpenNewsCommand, Source={x:Reference SportPageRoot}}"
                                        CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <VerticalStackLayout Spacing="10">

                                <StackLayout Orientation="Horizontal" Spacing="5">
                                    <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" LineBreakMode="WordWrap" HorizontalOptions="FillAndExpand" TextColor="Black"/>
                                </StackLayout>

                                <Label Text="{Binding Content}" FontSize="14" LineBreakMode="WordWrap" TextColor="#414141"/>
                                <Image Source="{Binding ImageUrl}" HeightRequest="180" WidthRequest="320" Aspect="AspectFill" HorizontalOptions="Center" IsVisible="{Binding IsImageVisible}"/>


                                <StackLayout Orientation="Horizontal" Spacing="120" HorizontalOptions="Center">
                                    <StackLayout Orientation="Horizontal" Spacing="5">
                                        <Label Text="{Binding Likes}" FontSize="20" VerticalOptions="Center" TextColor="black"/>
                                        <Button Text="{Binding HasLiked, Converter={StaticResource LikeButtonTextConverter}}"
                                            Command="{Binding Path=BindingContext.LikeNewsCommand, Source={x:Reference SportPageRoot}}"
                                            CommandParameter="{Binding NewsId}"
                                            BackgroundColor="Transparent"
                                            TextColor="Green"
                                            WidthRequest="70"
                                                FontSize="32"/>
                                    </StackLayout>
                                    <Button Text="âž¤ Share"
                                        Command="{Binding Path=BindingContext.ShareNewsCommand, Source={x:Reference SportPageRoot}}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Transparent"
                                        TextColor="Black"
                                            FontSize="32"/>
                                </StackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.Footer>
                    <StackLayout Padding="10">
                        <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" Color="Blue" />
                        <Label Text="Nu mai existÄƒ È™tiri Sport de afiÈ™at"
                           IsVisible="{Binding HasMoreItems, Converter={StaticResource InverseBoolConverter}}"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"
                           TextColor="Gray" />
                    </StackLayout>
                </CollectionView.Footer>

            </CollectionView>
        </RefreshView>

        <!-- âœ… Windows: fÄƒrÄƒ RefreshView, doar cu buton -->
        <CollectionView ItemsSource="{Binding News}"
                    ItemsUpdatingScrollMode="KeepScrollOffset"
                    RemainingItemsThreshold="5"
                    RemainingItemsThresholdReached="OnCollectionViewRemainingItemsThresholdReached"
                    x:Name="NewsListView_Windows"
                    IsVisible="{OnPlatform WinUI=True, Android=False, iOS=False}"
                        Grid.Row="1">



            <!-- ItemTemplate È™i Footer identice -->

            <CollectionView.ItemTemplate>
                <DataTemplate >
                    <Frame BackgroundColor="LightGray" Margin="0,10" Padding="15" CornerRadius="10" HasShadow="True" WidthRequest="1000">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Path=BindingContext.OpenNewsCommand, Source={x:Reference SportPageRoot}}"
                                 CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="10">
                            <StackLayout Orientation="Horizontal" Spacing="5">
                                <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" LineBreakMode="WordWrap" HorizontalOptions="FillAndExpand" TextColor="Black"/>
                            </StackLayout>

                            <Label Text="{Binding Content}" FontSize="14" LineBreakMode="WordWrap" TextColor="#414141"/>
                            <Image Source="{Binding ImageUrl}" HeightRequest="180" WidthRequest="320" Aspect="AspectFill" HorizontalOptions="Center" IsVisible="{Binding IsImageVisible}"/>


                            <StackLayout Orientation="Horizontal" Spacing="150" HorizontalOptions="Center">
                                <StackLayout Orientation="Horizontal" Spacing="5">
                                    <Label Text="{Binding Likes}" FontSize="14" VerticalOptions="Center" TextColor="Black"/>
                                    <Button Text="{Binding HasLiked, Converter={StaticResource LikeButtonTextConverter}}"
                                        Command="{Binding Path=BindingContext.LikeNewsCommand, Source={x:Reference SportPageRoot}}"
                                        CommandParameter="{Binding NewsId}"
                                        BackgroundColor="Transparent"
                                        TextColor="White"
                                        FontSize="24"
                                        WidthRequest="60"/>
                                </StackLayout>
                                <Button Text="âž¤ Share"
                                    Command="{Binding Path=BindingContext.ShareNewsCommand, Source={x:Reference SportPageRoot}}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="Transparent"
                                    TextColor="Black"
                                        FontSize="24"/>
                            </StackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.Footer>
                <StackLayout Padding="10">
                    <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" Color="Blue" />
                    <Label Text="Nu mai existÄƒ È™tiri de afiÈ™at"
                       IsVisible="{Binding HasMoreItems, Converter={StaticResource InverseBoolConverter}}"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0"
                       TextColor="Gray" />
                </StackLayout>
            </CollectionView.Footer>
        </CollectionView>

    </Grid>
</ContentPage>